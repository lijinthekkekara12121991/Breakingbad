<div class= "panel-heading">
    <h3 class= "panel-title gray">The characters are : </h3>
</div>
<div class= "panel-body">
    <% @body.count.times do |i|%>
        <div class="row">
            <div class="col-6 col-md-4">
                <img src="<%= @body[i]["img"] %>" height="150" width="150">
            </div>
            <div class="col-md-8">
                <h3>
                    Name:<br/>
                    <span class = "red"><%= @body[i]["name"] %><br/></span>
                </h3>  
            </div>
        </div>
        <div class= "row">
            <div class= "col-md-12">
                <hr>
            </div>
        </div>
    <% end %>
</div>
<div class="panel-footer">
</div>
